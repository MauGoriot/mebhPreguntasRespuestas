<!doctype html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.4/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.4/dist/sweetalert2.min.js"></script>
    <script src="https://kit.fontawesome.com/d6d79a858e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/Menu.css")" rel="stylesheet" />
    <title>Banca Digital</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light position-sticky top-0">
        <div class="container">
            <a class="navbar-brand" href="#">BAC<span class="text-white">CREDOMATIC</span></a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars lead"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item d-flex">
                        @Html.ActionLink(
                            "Ver Preguntas",
                            "Index",
                            "Home",
                            null,
                            new { @class = "nav-link align-self-center" }
                        )
                    </li>
                    <li class="nav-item d-flex">
                        @Html.ActionLink(
                            "Mis Preguntas",
                            "MisPreguntas",
                            "Home",
                            null,
                            new { @class = "nav-link align-self-center" }
                        )
                    </li>

                    <li class="nav-item dropdown d-flex align-items-center">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>  @((Session["usuario"] as CapaPresentacion.Models.Usuario)?.NombreUsuario ?? "Invitado")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                @Html.ActionLink(
                                    "Cerrar sesión",
                                    "CerrarSesion",
                                    "Home",
                                    null,
                                    new { @class = "dropdown-item" }
                                )
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <a href="#" class="btn btn-primary position-fixed bottom-0 end-0 m-4" data-bs-toggle="modal" data-bs-target="#questionModal" style="z-index: 1000;">
        <i class="fas fa-plus"></i> Hacer una pregunta
    </a>

    <div class="modal fade" id="questionModal" tabindex="-1" aria-labelledby="questionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="questionModalLabel">Escribe tu pregunta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="questionForm" action="@Url.Action("GuardarPregunta","Preguntas")" method="post">
                        <div class="mb-3">
                            <label for="questionText" class="form-label">Pregunta</label>
                            <textarea id="questionText" class="form-control" name="Titulo" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar pregunta</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2024 Banca Digital. Todos los derechos reservados. <a href="#">Política de Privacidad</a></p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Scripts/EstadoPregunta.js")"></script>
</body>

</html>
